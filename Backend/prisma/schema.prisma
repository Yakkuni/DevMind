generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Palestrante {
  id        String  @id @default(uuid())
  nome      String
  minibio   String  @db.Text
  foto      String  @db.Text
  instagram String? 
  linkedin  String?
  youtube   String?
  site      String?

  @@map("palestrantes")
}


model Cronograma {
  id           String   @id
  nome         String
  descricao    String
  horario      DateTime
  local        String
  tipo         String
  conduzidoPor String

  @@map("cronograma")
}

model Usuario {
  id     String @id
  nome   String
  email  String @unique
  cargo  String
  senha  String

  @@map("usuarios")
}

